lx = ../../build/lx
llc = llc
cc = gcc

src = src
lib = lib
bin = bin

rule lx
 command = $lx -o $out $in
rule link
 command = $cc -g -o $out $in -lm -lgdi32 -lopengl32

build $bin/gl.o: lx $src/gl.lx
build $bin/glfw.o: lx $src/glfw.lx
build $bin/main.o: lx $src/main.lx

build $bin/out.exe: link $bin/gl.o $bin/glfw.o $bin/main.o $lib/libglfw3.a
